                           </children>
                           <VBox.margin>
                              <Insets left="20.0" top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <children>
                              <TableView fx:id="tableAbsence" prefHeight="100.0" prefWidth="494.0">
                                <columns>
                                  <TableColumn prefWidth="57.0" text="Numero" />
                                  <TableColumn prefWidth="114.0" text="Nom" />
                                    <TableColumn prefWidth="117.0" text="Prenom" />
                                    <TableColumn prefWidth="205.0" text="Absences" />
                                </columns>
